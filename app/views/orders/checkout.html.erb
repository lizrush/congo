<h1>Checkout:</h1>

<td>
  <%= form_for @order, url: add_billing_info_path do |f| %>

    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@order.errors.count, "error") %> prohibited this product from being saved:
        </h2>
          <% @order.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
    <% end %>
        </ul>
      </div>
  <% end %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :name_on_cc %><br>
      <%= f.text_field :name_on_cc  %>
    </div>

    <div class="field">
      <%= f.label :cc_number %><br>
      <%= f.number_field :cc_number %>
    </div>

    <div class="field">
      <%= f.label :cc_expiration %><br>
      <%= f.number_field :cc_expiration %>
    </div>

    <div class="field">
      <%= f.label :cc_cvv %><br>
      <%= f.number_field :cc_cvv %>
    </div>

    <div class="field">
      <%= f.label :street_address %><br>
      <%= f.text_area :street_address %>
    </div>

    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_area :city %>
    </div>

    <div class="field">
      <%= f.label :state %><br>
      <div id="states_or_provinces">
      <%= f.select :state, us_states %>
    </div>
    </div>

    <div class="field">
      <%= f.label :country %><br>
      <%= f.select :country, only_us_and_canada, {selected: 'US'} %>
    </div>

    <div class="field">
      <%= f.label :billing_zip %><br>
      <%= f.number_field :billing_zip %>
    </div>

    <div class="actions">
      <%= f.submit "Submit Order" %>
    </div>

    <% end %>
  </form>
</td>

